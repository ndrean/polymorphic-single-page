<p class="radio-label pr-1 genre-tag" 
    tabindex = <%=genre.id%>
    id = "genre_<%=genre.id%>"
    data-name="<%=genre.name%>""
    contenteditable="true">

        <span class="pr-2">
            <%= genre.name %>
        </span>
        <span>
            <%= link_to genre_path(genre),
                method: :delete, 
                remote: true,
                data:{confirm: "You can delete this tag only if not used"}
            do %>
                <i class= 'fa fa-times-circle'></i>
            <% end %>
        </span>
</p>