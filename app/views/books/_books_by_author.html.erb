<table class="table table-dark">
    <thead>
        <tr>
            <th scope="col">Author</th>
            <th scope="col">Country</th>
            <th scope="col">Book Title</th>
        </tr>
    </thead>
    <tbody>
        <% author_books.each do |a| %>
          <% a.books.each do |b| %>
            <tr>
                <th scope="row"><%= a.name %></th>
                <td><%= a.country.name %></td>
                <td> <%= b.title %> </td>
            </tr>
            <% end %>
        <% end %>
    </tbody>
</table>
